{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitThis": true,
    "lib": ["es6", "dom", "esnext"],
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "lib",
    "jsx": "react",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*.ts"]
}
